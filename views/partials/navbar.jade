.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        img(src='/images/sparkr_logo_white_flat_2.png', style='height: 40px;')
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if user
          li(class=title=='Polls'?'active':undefined)
            a(href='/polls').navting Polls
          li(class=title=='Create Pool'?'active':undefined)
            a(href='/create', style='color:rgb(255, 248, 123); font-weight:bold') Create Poll
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login').navting Login
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup').navting Create Account
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account')
                  span.ion-person
                  | My Account
              li.divider
              li
                a(href='/logout')
                  span.ion-log-out
                  |  Logout
